<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <!-- Ruta Ejemplo -> MasonryCMS/namespace/action.extension-->
    <!-- Ruta Ejemplo -> MasonryCMS/masonryAdmin/maintenance/manufacturer.mdk-->
    <package name="vendorMaintenance" namespace="/vendorAdmin"  extends="struts-default">
        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error" />
        </global-exception-mappings>      
        
        <action name="shipping" class="web.vendorAdmin.ShippingZone">
            <result name="input">/home/vendorAdmin/shipping/intro.jsp</result>
            <result name="success">/home/vendorAdmin/shipping/intro.jsp</result>
        </action>   
         <action name="roles" class="web.vendorAdmin.Roles">
            <result name="input">/home/vendorAdmin/roles/intro.jsp</result>
            <result name="success">/home/vendorAdmin/roles/intro.jsp</result>
        </action>  
<!--        </action>  
             <action name="gallery" class="web.masonryAdmin.maintenance.Gallery">
             <result name="input">/home/masonryAdmin/maintenance/gallery/intro.jsp</result>
             <result name="success">/home/masonryAdmin/maintenance/gallery/intro.jsp</result>
        </action>          -->
    </package>
    
    <!-- package to control the combos using ajax -->
    <package name="masonryAjax" namespace="/vendorAdmin/queries/ajax" extends="struts-default">
        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error" />
        </global-exception-mappings>         
       
         <action name="select-cities" class="web.vendorAdmin.queries.ajax.SelectCities">
            <result type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>  
         <action name="select-postal-codes" class="web.vendorAdmin.queries.ajax.SelectPostalCodes">
            <result type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action> 
 
    </package>
    
</struts>